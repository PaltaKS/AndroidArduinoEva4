<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luces"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tienda"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BtnTiendaIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00796b"
                android:layout_weight="1"
                android:text="Encender" />

            <Button
                android:id="@+id/BtnTiendaOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d32f2f"
                android:layout_weight="1"
                android:text="Apagar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Segundo Piso"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BtnSegPisoIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00796b"
                android:layout_weight="1"
                android:text="Encender" />

            <Button
                android:id="@+id/BtnSegPisoOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d32f2f"
                android:layout_weight="1"
                android:text="Apagar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Garage"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BtnGarageIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00796b"
                android:layout_weight="1"
                android:text="Encender" />

            <Button
                android:id="@+id/BtnGarageOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d32f2f"
                android:layout_weight="1"
                android:text="Apagar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Piso Izquierdo"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BtnLeftIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00796b"
                android:layout_weight="1"
                android:text="Encender" />

            <Button
                android:id="@+id/BtnLeftOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d32f2f"
                android:layout_weight="1"
                android:text="Apagar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Piso Derecho"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BtnRightIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00796b"
                android:layout_weight="1"
                android:text="Encender" />

            <Button
                android:id="@+id/BtnRightOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d32f2f"
                android:layout_weight="1"
                android:text="Apagar" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Puerta"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Garage"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BtnGarageOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00796b"
                android:layout_weight="1"
                android:text="Abrir" />

            <Button
                android:id="@+id/BtnGarageClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d32f2f"
                android:layout_weight="1"
                android:text="Cerrar" />
        </LinearLayout>

        <Button
            android:id="@+id/BtnAllOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#d32f2f"
            android:text="Apagar Luces y Cerrar Garage"
            android:textSize="24dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>